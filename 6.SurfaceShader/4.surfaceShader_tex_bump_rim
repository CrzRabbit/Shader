Shader "Shader学习/SurfaceShader/surfaceShader_tex_bump_rim"
{
    Properties
    {
        _MainTex("主纹理", 2D) = "white" {}
        _BumpMap("凹凸纹理", 2D) = "bump" {}
        _RimColor("边缘颜色", Color) = (0.3, 0.1, 0.6, 0)
        _RimPower("边缘颜色强度", Range(0.5, 8.0)) = 3
    }

    SubShader
    {
        Tags{"RenderType" = "Opaque"}

        CGPROGRAM

        #program surface surf Lambert

        struct Input
        {
            float2 uv_MainTex;
            float2 uv_BumpMap;
            float3 viewDir;
        }

        sampler2D _MainTex;
        sampler2D _MainTex;
        float4 _RimColor;
        float _RimPower;

        void surf(Input IN, inout SurfaceOutput o)
        {
            o.Albedo = tex2D(_MainTex, IN.uv_MainTex).rgb;
            o.Normal = UnpackNormal(tex2D(_BumpMap, IN.uv_Bumpmap));

            float rim = 1 - saturate(dot(normalize(IN.viewDir), o.Normal));
            o.Emission = _RimColor.rgb * pow(rim, _RimPower);
        }
        ENDCG
    }

    Fallback    "Diffuse"
}